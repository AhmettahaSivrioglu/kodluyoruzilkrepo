package Giris;

import java.util.Scanner;

public class Proje03 {
    public static void main(String[] args) {

        int birinciDeger,ikinciDeger,ucuncuDeger,ucgenCevresi,ucgenAlani ;


        Scanner input = new Scanner (System.in);

        System.out.print("birinciDeger : ");
        birinciDeger= input.nextInt();
        System.out.print("ikinciDeger : ");
        ikinciDeger = input.nextInt();
        System.out.print("ucuncuDeger : ");
        ucuncuDeger = input.nextInt();

        ucgenCevresi = birinciDeger+ikinciDeger+ucuncuDeger;
        ucgenAlani = ucgenCevresi/2 * (ucgenCevresi/2-birinciDeger)*(ucgenCevresi/2-ikinciDeger)*(ucgenCevresi/2-ucuncuDeger);

        System.out.println("Ucgen AlanÄ± = " + ucgenAlani);
        System.out.println("Ucgen Cevresi = " + ucgenCevresi );

       






    }
}
