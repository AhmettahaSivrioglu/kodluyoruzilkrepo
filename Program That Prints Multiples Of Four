import java.util.Scanner;


public class tekSayi {
    public static void main(String[] args) {
        int number,total=0;

        Scanner inp=new Scanner(System.in);





            do{
                System.out.print("Bir sayi giriniz :");
                number = inp.nextInt();

                if(number>0){
                    if(number%4==0){
                        total +=number;
                }
            }

            }



            while(number>0);
        {

            System.out.print("Sum of the numbers " + total);
        }



    }



}
